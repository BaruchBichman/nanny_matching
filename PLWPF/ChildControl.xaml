<UserControl x:Class="PLWPF.ChildControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" FontFamily="Berlin Sans FB Demi">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddChild" Content="Add child" Click="AddChild_Click"   Grid.Row="0" Grid.Column="0" Style="{DynamicResource ButtonStyle2}"/>
        <Button x:Name="DeleteChild" Content="Remove child" Click="DeleteChild_Click"  Grid.Row="1" Grid.Column="0" Style="{DynamicResource ButtonStyle2}"/>
        <Button x:Name="UpdateChild" Content="Update child" Click="UpdateChild_Click"  Grid.Row="2" Grid.Column="0" Style="{DynamicResource ButtonStyle2}"/>

    </Grid>
</UserControl>
