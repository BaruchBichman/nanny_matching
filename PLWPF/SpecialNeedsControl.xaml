<UserControl x:Class="PLWPF.SpecialNeedsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" 
            d:DesignHeight="200" d:DesignWidth="500" Background="LightPink" FontSize="14" FontFamily="Berlin Sans FB Demi" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListView  x:Name="listView" Grid.Row="1"  Background="LightPink">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

        </ListView>
        <Label x:Name="label" Content="Children with special needs" FontWeight="Medium"  HorizontalAlignment="Center"  VerticalAlignment="Top"/>

    </Grid>
</UserControl>
